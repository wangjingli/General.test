                    <input type="text" class="form-control" id="roleName" />
                    <span class="form-control-feedback"><i class="fa fa-user"></i></span>
                </div>
                <div class="form-group  has-feedback">
                    描述
                    <label class="control-label" for="roleDescript">
                    </label>
                    <textarea type="text" class="form-control" id="roleDescript" rows="10"></textarea>
                    <span class="form-control-feedback"><i class="fa fa-quote-right"></i></span>
                </div>
                <button type="button" id="submit" class="btn btn-primary">
                    <i class="icon fa fa-plus"></i>添加</button>
                </form>
            </div>
        </div>
    </div>
</div>
