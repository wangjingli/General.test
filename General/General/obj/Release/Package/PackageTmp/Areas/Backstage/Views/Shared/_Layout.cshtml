<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@System.Configuration.ConfigurationManager.AppSettings["WebName"].ToString()
        - 后台管理112</title>
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/Images/favicon.ico")" />
    @Styles.Render("~/Compression/css/Bootstrap")
    <link href="~/Scripts/UI/Bootstrap/css/demo.min.css" rel="stylesheet" />
    <link href="~/Scripts/UI/Bootstrap/css/typicons.min.css" rel="stylesheet" />
    <link href="~/Scripts/UI/Bootstrap/css/animate.min.css" rel="stylesheet" />
    <link href="~/Scripts/UI/Bootstrap/css/dataTables.bootstrap.css" rel="stylesheet" />
    <style>
        .navbar .navbar-inner .navbar-header .navbar-account .setting-container label a
        {
            color: white;
            text-decoration: none;
        }
    </style>
    @RenderSection("Styles", false)
    <script src="~/Scripts/UI/Bootstrap/js/skins.min.js"></script>
</head>
<body>
    <div class="loading-container">
        <div class="loading-progress">
            <div class="rotator">
                <div class="rotator">
                    <div class="rotator colored">
                        <div class="rotator">
                            <div class="rotator colored">
                                <div class="rotator colored">
                                </div>
                                <div class="rotator">
                                </div>
                            </div>
                            <div class="rotator colored">
                            </div>
                        </div>
                        <div class="rotator">
                        </div>
                    </div>
                    <div class="rotator">
                    </div>
                </div>
                <div class="rotator">
                </div>
            </div>
            <div class="rotator">
            </div>
        </div>
    </div>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="navbar-container">
                <div class="navbar-header pull-left">
                    <a href="#" class="navbar-brand"><small>
                        <img src="~/Scripts/UI/Bootstrap/img/logo.png" alt="LOGO标题" title="LOGO标题" />
                    </small></a>
                </div>
                <div class="sidebar-collapse" id="sidebar-collapse">
                    <i class="collapse-icon fa fa-bars"></i>
                </div>
                <div class="navbar-header pull-right">
                    <div class="navbar-account">
                        <ul class="account-area">
                            <li><a class="wave in dropdown-toggle" data-toggle="dropdown" title="我的消息" href="#">
                                <i class="icon fa fa-envelope"></i><span class="badge">3</span> </a>
                                <ul class="pull-right dropdown-menu dropdown-arrow dropdown-messages">
                                    <li><a href="#">
                                        <img src="~/Scripts/UI/Bootstrap/img/avatars/divyia.jpg" class="message-avatar" alt="Divyia Austin">
                                        <div class="message">
                                            <span class="message-sender">发件人 </span><span class="message-time">时间 </span><span
                                                class="message-subject">主题 </span><span class="message-body">内容 </span>
                                        </div>
                                    </a></li>
                                </ul>
                            </li>
                            <li><a class="login-area dropdown-toggle" data-toggle="dropdown">
                                <div class="avatar" title="View your public profile">
                                    <img src="@Url.Content("~/Areas/Backstage/Content/Images/UserHead/admin.gif")">
                                </div>
                                <section style="margin: 0px auto;">
                                        <h2><span class="profile"><span>@((User.Identity as FormsIdentity).Ticket.UserData.Split("|".ToCharArray())[1])</span></span></h2>
                                    </section>
                            </a>
                                <ul class="pull-right dropdown-menu dropdown-arrow dropdown-login-area">
                                    <li class="username"><a>@((User.Identity as FormsIdentity).Ticket.UserData.Split("|".ToCharArray())[1])</a></li>
                                    <li class="email"><a>@((User.Identity as FormsIdentity).Ticket.UserData.Split("|".ToCharArray())[2])</a></li>
                                    <li>
                                        <div class="avatar-area">
                                            <img src="@Url.Content("~/Areas/Backstage/Content/Images/UserHead/admin.gif")" class="avatar">
                                            @*<span class="caption">用户头像</span>*@
                                        </div>
                                    </li>
                                    <li class="edit"><a href="profile.html" class="pull-left">个人中心</a> <a href="#" class="pull-right">
                                        修改头像</a> </li>
                                    <li class="theme-area">
                                        <ul class="colorpicker" id="skin-changer">
                                            <li><a class="colorpick-btn" href="#" style="background-color:#5DB2FF;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/blue.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#2dc3e8;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/azure.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#03B3B2;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/teal.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#53a93f;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/green.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#FF8F32;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/orange.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#cc324b;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/pink.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#AC193D;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/darkred.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#8C0095;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/purple.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#0072C6;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/darkblue.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#585858;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/gray.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#474544;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/black.min.css"))">
                                            </a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#001940;" rel="@(Url.Content("~/Scripts/UI/Bootstrap/css/skins/deepblue.min.css"))">
                                            </a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-footer edit"><a href="@Url.Action("LockScreen", "Account")" class="pull-left">
                                        <i class="icon fa fa-lock"></i>系统锁屏 </a><a href="@Url.Action("Logout", "Account")" class="pull-right">
                                            <i class="icon fa fa-sign-out"></i>安全退出 </a></li>
                                </ul>
                            </li>
                        </ul>
                        <div class="setting">
                            <a id="btn-setting" title="Setting" href="#"><i class="icon glyphicon glyphicon-cog">
                            </i></a>
                        </div>
                        <div class="setting-container">
                            <label>
                                @*<input type="checkbox" id="checkbox_fixednavbar">
                                    <span class="text">Fixed Navbar</span>*@ <a href="#"><i class="icon typcn typcn-edit">
                                    </i>&nbsp;修改个人资料&nbsp;</a>
                            </label>
                            <label>
                                @*<input type="checkbox" id="checkbox_fixedsidebar">
                                    <span class="text">Fixed SideBar</span>*@ <a href="#"><i class="icon typcn typcn-edit">
                                    </i>&nbsp;修改密码&nbsp;</a>
                            </label>
                            <label>
                                @*<input type="checkbox" id="checkbox_fixedbreadcrumbs">
                                    <span class="text">Fixed BreadCrumbs</span>*@ <a href="#"><i class="icon typcn typcn-edit">
                                    </i>&nbsp;修改头像&nbsp;</a>
                            </label>
                            <label>
                                @*<input type="checkbox" id="checkbox_fixedheader">
                                    <span class="text">Fixed Header</span>*@
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main-container container-fluid">
        <div class="page-container">
            <div class="page-sidebar sidebar-fixed" id="sidebar">
                @Html.Partial("_MenuPage")
            </div>
            <div class="page-content">
                <section>
                <div class="page-breadcrumbs page-header position-relative breadcrumbs-fixed page-header-fixed" style=" top:45px;">
                    <ul class="breadcrumb">
                        @Html.Partial("_Breadcrumb")
                    </ul>
                    <div class="header-buttons">
                        <a class="sidebar-toggler" href="#" title="平铺"><i class="fa fa-arrows-h"></i></a>
                        <a class="refresh" id="refresh-toggler" href="" title="刷新"><i class="glyphicon glyphicon-refresh">
                        </i></a><a class="fullscreen" id="fullscreen-toggler" href="#" title="全屏"><i class="glyphicon glyphicon-fullscreen">
                        </i></a>
                    </div>
                </div>
                @*<div class="page-breadcrumbs page-header position-relative page-header-fixed">
                <ul class="breadcrumb">
                        @Html.Partial("_Breadcrumb")
                    </ul>
                    <div class="header-title">
                        <h1 style="line-height: 38px; font-family: 'Microsoft YaHei UI'; font-size: 16px;">
                            @ViewBag.Title
                        </h1>
                    </div>
                    <div class="header-buttons">
                        <a class="sidebar-toggler" href="#" title="平铺"><i class="fa fa-arrows-h"></i></a>
                        <a class="refresh" id="refresh-toggler" href="" title="刷新"><i class="glyphicon glyphicon-refresh">
                        </i></a><a class="fullscreen" id="fullscreen-toggler" href="#" title="全屏"><i class="glyphicon glyphicon-fullscreen">
                        </i></a>
                    </div>
                </div>*@
                <div class="page-body" style=" margin:35px;">
                
                    @RenderBody()
                </div>
                </section>
            </div>
        </div>
    </div>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
      <script src="../../../../Scripts/UI/Bootstrap/js/html5shiv.js" type="text/javascript"></script>
      <script src="~/Scripts/UI/Bootstrap/js/respond.min.js"></script>
    <![endif]-->

    @Scripts.Render("~/Compression/js/jquery")
    @Scripts.Render("~/Compression/js/Bootstrap")
    
    <script src="~/Scripts/Plug-JS/jquery.serializeJSON/jquery.serializeJSON.min.js"></script>
    <script src="~/Scripts/UI/Bootstrap/js/bootbox/bootbox.js"></script>
    <script src="~/Scripts/UI/Bootstrap/js/toastr/toastr.js"></script>
    <script src="~/Scripts/UI/Bootstrap/js/validation/bootstrapValidator.js"></script>
    <script src="~/Areas/Backstage/Content/JS/tool.js"></script>
    @*<script src="~/Areas/Backstage/Content/JS/BackstageApp.js"></script>*@
    <script>
        $(window).bind("load", function () {
            //加载主题
            themeprimary = getThemeColorFromCss('themeprimary');
            themesecondary = getThemeColorFromCss('themesecondary');
            themethirdcolor = getThemeColorFromCss('themethirdcolor');
            themefourthcolor = getThemeColorFromCss('themefourthcolor');
            themefifthcolor = getThemeColorFromCss('themefifthcolor');
            //BackstageApp.InitCheckAll();
        });
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
