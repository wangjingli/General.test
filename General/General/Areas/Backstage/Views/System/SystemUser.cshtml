@using Webdiyer.WebControls.Mvc
@{
    ViewBag.Title = "系统角色";
    ViewBag.Nav = new List<string>() { "系统设置", "系统角色" };
    Layout = "~/Areas/Backstage/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class=" col-lg-12 col-xs-12">
        <div class="widget">
            <div class=" widget-header">
                <i class="widget-icon fa fa-user"></i><span class="widget-caption">系统用户</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize"><i class="fa fa-expand"></i></a><a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                </div>
                <!--Widget Buttons-->
                <div>
                </div>
            </div>
            <div class=" widget-body">
                <div class="table-toolbar">
                    @using (Ajax.BeginForm("SystemUser", new RouteValueDictionary { { "id", "" } }, new MvcAjaxOptions { UpdateTargetId = "DataTable", InsertionMode = InsertionMode.Replace }, new RouteValueDictionary { { "id", "QuerySection" } }))
                    {
                        <label>
                            用户名称：
                        </label>
                        <span id="" class="dataTables_filter">
                            <label>
                                <input type="search" class="form-control input-sm" name="Keyword" aria-controls="editabledatatable" />
                            </label>
                        </span>
                        <label>
                            <a id="query" href="javascript:Query();" class="btn btn-primary">
                                <i class="icon fa fa-search">
                                </i>查询
                            </a>
                        </label>
                        <label>
                            <a id="addUser" href="@Url.Action("UserAdd", "System")" class="btn btn-primary">
                                <i class="icon fa fa-plus"></i>新加用户
                            </a>
                        </label>
                        <label>
                            <a id="deleteUsers" onclick="Deletefun(this);" href="#" class="btn btn-primary">
                                <i class="icon fa fa-trash-o">
                                </i>删除
                            </a>
                        </label>
                    }
                </div>
                <div id="DataTable">
                    @{Html.RenderPartial("_Table_SystemUser");}
                </div>
            </div>
        </div>
    </div>
</div>
<!--Modal Templates-->
<!--Email Modal Templates-->
<div id="myModal" style="display:none;">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">

                @Html.DropDownList("RoleList", ViewData["RoleList"] as SelectList,"--请选择角色--", new { @class = "form-control", @onchange = "changeRole(this)" })

            </div>
            <script type="text/javascript">
               
            </script>



        </div>
    </div>
</div>
<!--End Email Templates-->
@section Scripts
    {
    @{Html.RegisterMvcPagerScriptResource();}
    <script type="text/javascript" src="~/Scripts/ExtensionPlug/unobtrusive-ajax/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/UI/Bootstrap/js/bootbox/bootbox.js"></script>

}
<script src="~/Areas/Backstage/Content/JS/app.js"></script>